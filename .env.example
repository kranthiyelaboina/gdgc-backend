# Production Environment Variables Template
# Copy this to .env and fill in your actual values

# Server Configuration
NODE_ENV=production
PORT=10000

# Database (MongoDB Atlas)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database-name

# Security Keys (Generate strong, unique keys for production)
JWT_SECRET=your-super-strong-jwt-secret-key-here
SESSION_SECRET=your-super-strong-session-secret-key-here
ADMIN_SECRET_KEY=your-admin-registration-secret-key-here

# Firebase Service Account (JSON string - paste your entire service account JSON here)
# Get this from Firebase Console > Project Settings > Service Accounts > Generate New Private Key
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"...","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----...","client_email":"...","client_id":"...","auth_uri":"...","token_uri":"...","auth_provider_x509_cert_url":"...","client_x509_cert_url":"..."}

# CORS Configuration (comma-separated list of allowed origins)
ALLOWED_ORIGINS=https://gdgc-platform-frontend.vercel.app,https://gdgciare.tech,https://www.gdgciare.tech

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100